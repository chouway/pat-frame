{
  "from": {{from}},
  "size": {{size}},
  {{#noSources}}
  "_source": ["_id"],
  {{/noSources}}
  "query":{
      "bool": {
            "should": [
                 {{#hasKey}}
                        {
                            "query_string": {
                               "fields" : ["paragraphs^3","baikeDesc"],
                               "query": "{{key}}"
                            }
                        },
                        {
                            "simple_query_string":{
                                 "fields": ["propKey^100","propVals^100","author^200","title^100", "subtitle^50","paragraphs^100"],
                                 "query": "{{keyWord}}",
                                  "boost": 10
                            }
                        }
                  {{/hasKey}}

                  {{^hasKey}}
                  {"match_all": {}}
                  {{/hasKey}}
            ]

                  {{#hasMust}}
                  ,"must" :
                  [

                        {{#hasPropSpecs}}
                           {"bool": {
                              "should": [
                                {"terms": {
                                    "propKeys": {{#toJson}}propSpecs{{/toJson}}
                                  }
                                },
                                {"terms": {
                                    "propVals": {{#toJson}}propSpecs{{/toJson}}
                                  }
                                }
                              ],
                             "minimum_should_match": 1
                           }}{{#hasProps}},{{/hasProps}}
                        {{/hasPropSpecs}}
                        {{#hasProps}}
                            {{#props}}
                            {
                                "terms":{
                                        "properties.{{propKey}}.keyword":{{#toJson}}propVals{{/toJson}}
                                }
                            }{{end}}
                           {{/props}}
                       {{/hasProps}}
                  ]
                  {{/hasMust}}
      }
  },
  "aggs":  { {{#aggsInfos}}"{{aggsName}}":{"terms":{"field":"{{field}}","size":"{{size}}"}} {{end}} {{/aggsInfos}} },
  {{#needHighLight}}
    "highlight": {
             "fields": {
                "title": {
                },
                "author" : {
                },
                "paragraphs": {
                }
             }
    },
    {{/needHighLight}}
      "sort":{
             "_score":{
                "order":"desc"
              },
               {{#hasKey}}
                  "index":{
                    "order":"asc"
                  }
              {{/hasKey}}
              {{^hasKey}}
                  "count":{
                    "order":"desc"
                  }
              {{/hasKey}}
         }

}